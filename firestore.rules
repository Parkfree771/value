rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 사용자 프로필
    match /users/{userId} {
      allow read: if true; // 모든 사용자 프로필 읽기 가능
      allow write: if request.auth != null && request.auth.uid == userId; // 본인만 수정 가능
    }

    // 리포트 게시글
    match /posts/{postId} {
      allow read: if true; // 모든 게시글 읽기 가능
      allow create: if request.auth != null; // 로그인 사용자만 작성 가능
      allow update: if request.auth != null &&
                      (request.auth.uid == resource.data.authorId || // 작성자만 수정 가능
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['views', 'likes', 'likedBy', 'currentPrice', 'returnRate'])); // 조회수, 좋아요는 누구나 업데이트 가능
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId; // 작성자만 삭제 가능
    }

    // 좋아요 정보
    match /likes/{likeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 댓글
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
  }
}
